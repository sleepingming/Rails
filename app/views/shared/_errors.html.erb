<% if resource.present? && resource.errors.any? %>
  <%=  content_tag :div, class: 'resource-errors', data: { resource_id: resource.id} do %>
  <h2>Возникли ошибки (<%= resource.errors.count%>)</h2>

  <ul>
    <% resource.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<% end %>
